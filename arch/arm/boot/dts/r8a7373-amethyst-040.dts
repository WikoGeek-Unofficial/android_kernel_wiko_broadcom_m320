/dts-v1/;
#include "r8a7373.dtsi"
#include "amethyst-common.dtsi"

/{
	model = "U2 Amethyst 0.40-";
	compatible = "renesas,amethyst,r8a7373", "renesas,amethyst", "renesas,r8a7373";

wlan-sdio {
        nv-path = "/system/vendor/firmware/fw_wifi_nvram_amethyst_edn030.txt";
};


};

&lcdc {
	reset-gpio = <&pfc 22 GPIO_ACTIVE_LOW>;
};

&i2c4 {
	touchscreen@67 {
		interrupt-parent = <&irqc0>;
		interrupts = <30 IRQ_TYPE_EDGE_FALLING>;
		reset-gpios = <&pfc 21 GPIO_ACTIVE_HIGH>;
	};
};

&i2c2 {

	/* Gyroscope Sensor */
	l3gd20: l3gd20@6b {
		orientation = /bits/ 8 <0x01 0x00 0x00
					0x00 0x01 0x00
					0x00 0x00 0x01>;
	};

	/* Accelerometer sensor */
	lsm303dlacc: lsm303dlacc@19 {
		orientation = /bits/ 8 <0x00 0x1 0x00
					0xFF 0x00 0x00
					0x00 0x00 0xFF>;
        };

	/* Magnetometer Sensor */
	lsm303dlmag: lsm303dlmag@1e {
		orientation = /bits/ 8 <0x00 0x01 0x00
					0xFF 0x00 0x00
					0x00 0x00 0xFF>;
        };
};

&i2c3 {
	lc709203f@0x0B {
		compatible = "bcm,lc709203f";
		reg = <0x0B>;
		/*reg addr: 0x07, Initial RSOC*/
		initial-rsoc = <0xAA55>;
		/*reg addr: 0x0B, Adjustment Pack Appli*/
		appli-adjustment = <0x0052>;
		/*ite of power off*/
		kernel-threshold-soc = <9>;
		/*ite of full capacity*/
		kernel-maximum-soc = <984>;
		/*ite of 1st charge full*/
		kernel-1stcharge-soc = <995>;
		/*ite of re-charge full*/
		kernel-recharge-soc = <980>;
		/*ite of back charge full*/
		kernel-bakcharge-soc = <995>;
	};
};
