/dts-v1/;
#include "r8a7373.dtsi"
#include "amethyst-common.dtsi"

/{
	model = "U2 Amethyst 0.13";
	compatible = "renesas,amethyst", "renesas,r8a7373";
};

&lcdc {
	pname = "NT35590";
};

&rt {
	screen0 {
		renesas,height = <1280>;
		renesas,width = <720>;
		renesas,stride = <736>;
	};
};

&i2c2 {
	/* Gyroscope Sensor */
	l3gd20: l3gd20@6b {
		orientation = /bits/ 8 <0x00 0xFF 0x00
					0x01 0x00 0x00
					0x00 0x00 0x01>;
	};

	/* Accelerometer sensor */
	lsm303dlacc: lsm303dlacc@19 {
		orientation = /bits/ 8 <0xFF 0x00 0x00
					0x00 0xFF 0x00
					0x00 0x00 0xFF>;
        };

	/* Magnetometer Sensor */
	lsm303dlmag: lsm303dlmag@1e {
		orientation = /bits/ 8 <0xFF 0x00 0x00
					0x00 0xFF 0x00
					0x00 0x00 0xFF>;
        };
};
